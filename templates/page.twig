<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {% if title is not empty %}
        <title>{{ title|raw }} - {{ APPLICATION_NAME|raw}}</title>
    {% else %}
        <title>{{APPLICATION_NAME|raw}}</title>
    {% endif %}
    <meta name="description" content="{{ __('Generic', 'Framadate is an online service for planning an appointment or make a decision quickly and easily.')}}" />

    {% if favicon is defined %}
        <link rel="icon" href="{{ favicon }}">
    {% endif %}

    <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {#<link rel="stylesheet" href="{{ asset('build/css/frama.css') }}">#}
    <script src="{{ asset('build/js/app.js') }}"></script>
    <script src="{{ asset('build/js/vendor.js') }}"></script>
    {% if locale != 'en' %}
        <script src="{{ asset('/js/locales/bootstrap-datepicker.' ~ locale ~ '.js') }}" ></script>
    {% endif %}

    {% block header %}{% endblock %}

</head>
<body>
{% if use_nav_js %}
    <script src="https://framasoft.org/nav/nav.js" type="text/javascript"></script>
{% endif %}
<div class="container ombre">

{% include "header.twig" %}

{% block messages %}

    {# messages #}
    {% include 'part/messages.twig' %}
{% endblock %}
<main>

{% block main %}{% endblock %}

</main>
</div> <!-- .container -->
{% if tracking_code is defined %}
{{ tracking_code }}
{% endif %}
</body>
</html>
