        "sabre/vobject": "~4.1",
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "friendsofphp/php-cs-fixer": "^3.2",
        "vimeo/psalm": "^4.15"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://framagit.org/framasoft/framadate/o80-i18n"
        }
    ],
