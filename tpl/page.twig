<!DOCTYPE html>
<html lang="{{ locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    {% if title is not empty %}
        <title>{{ title|raw }} - {{ APPLICATION_NAME|raw}}</title>
    {% else %}
        <title>{{APPLICATION_NAME|raw}}</title>
    {% endif %}
    <meta name="description" content="{{ __('Generic', 'Framadate is an online service for planning an appointment or make a decision quickly and easily.')}}" />

    {% if favicon is defined %}
        <link rel="icon" href="{{ favicon }}">
    {% endif %}

    <link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/datepicker3.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/frama.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/print.css') }}" media="print">
    <script type="text/javascript" src="{{ asset('/js/jquery-1.12.4.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/js/bootstrap-datepicker.js') }}"></script>
    {% if "en" != locale %}
        <script type="text/javascript" src="{{ asset('/js/locales/bootstrap-datepicker.' ~ locale ~ '.js') }}" ></script>
    {% endif %}
    <script type="text/javascript" src="{{ asset('/js/core.js') }}"></script>

    {% block header %}{% endblock %}

</head>
<body>
{% if use_nav_js %}
    <script src="https://framasoft.org/nav/nav.js" type="text/javascript"></script>
{% endif %}
<div class="container ombre">

{% include "header.twig" %}

<main role="main">

{% block main %}{% endblock %}

</main>
</div> <!-- .container -->
{% if tracking_code is defined %}
{{ tracking_code }}
{% endif %}
</body>
</html>
