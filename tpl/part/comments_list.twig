<div id="comments_list">
    <form action="{{ path('remove_comment', {'poll_id': poll.id}) }}" method="POST">
    {% if comments|length > 0 %}
        <h3>{{__('Comments', 'Comments of polled people')}}</h3>
        {% for comment in comments %}
            <div class="comment">
                {% if admin and not expired %}
                    <button type="submit" name="delete_comment" value="{{comment.id|raw}}" class="btn btn-link" title="{{__('Comments', 'Remove the comment')}}">
                        <span class="glyphicon glyphicon-remove text-danger"></span><span class="sr-only">{{__('Generic', 'Remove')}}</span>
                    </button>
                {% endif %}
                <span class="comment_date">{{ comment.date }}</span>
                <b>{{ comment.name | raw}}</b>&nbsp;
                <span>{{ comment.comment | escape | nl2br }}</span>
            </div>
        {% endfor %}
    {% endif %}
    </form>
    <div id="comments_alerts"></div>
</div>
